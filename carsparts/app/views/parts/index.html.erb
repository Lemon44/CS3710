<p id="notice"><%= notice %></p>

<nav class="navbar navbar-light bg-light" style= "background-color: #e3f2fd;">
  <form class="form-inline">
  <a class="btn btn-outline-success" href="/makes" role="button">Makes</a>
  <a class="btn btn-outline-success" href="/cars" role="button">Cars</a>
  </form>
</nav>

<h1>Parts</h1>

<h2 style="color:white;"> Search Parts by Name: </h2>
<%= form_tag(search_parts_url, method: "get") do %>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th style="color:white;">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.name %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Part', new_part_path %>
